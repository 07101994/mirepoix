<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2013/05/nuspec.xsd">
  <metadata>
    <id>Xamarin.MSBuild.Tool</id>
    <version>$version$</version>
    <authors>$authors$</authors>
    <owners>$owners$</owners>
    <copyright>$copyright$</copyright>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <licenseUrl>$licenseUrl$</licenseUrl>
    <projectUrl>$projectUrl$</projectUrl>
    <description>
      A command line tool that provides various MSBuild related utilities
      including the ability to generate a solution from an MSBuild Traversal
      Project and to visualize an MSBuild dependency graph.
    </description>
    <repository url="$repositoryUrl"/>
    <developmentDependency>true</developmentDependency>
  </metadata>
  <files>
    <file src="build\Xamarin.MSBuild.Tool.props" target="build\"/>
    <file src="$publishDir$msbuild-util.exe" target="tools\net461\"/>
    <file src="$publishDir$Xamarin.*.dll" target="tools\net461\"/>
    <file src="$publishDir$Microsoft.*.dll" target="tools\net461\"/>
    <file src="$publishDir$Mono.Options.dll" target="tools\net461\"/>
    <file src="$publishDir$System.Collections.Immutable.dll" target="tools\net461\"/>
    <file src="$publishDir$System.Threading.Tasks.Dataflow.dll" target="tools\net461\"/>
  </files>
</package>