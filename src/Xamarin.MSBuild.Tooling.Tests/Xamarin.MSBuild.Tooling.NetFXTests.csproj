<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net471</TargetFramework>
    <IsPackable>false</IsPackable>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\Xamarin.MSBuild.Tooling\Xamarin.MSBuild.Tooling.csproj" />
    <ProjectReference Include="..\Xamarin.XunitHelpers\Xamarin.XunitHelpers.csproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="xunit" Version="2.3.1" />
    <PackageReference Include="xunit.runner.console" Version="2.3.1"/>
    <PackageReference Include="System.IO.Compression" Version="4.3.0"/>
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="Solutions\**\*.cs"/>
  </ItemGroup>
  <Target Name="Test">
    <PropertyGroup>
      <ClrRunner Condition="!$([MSBuild]::IsOSPlatform('Windows'))">mono --debug </ClrRunner>
    </PropertyGroup>
    <Exec Command="$(ClrRunner)$(XunitConsolePath) $(OutputPath)$(AssemblyName).dll -noshadow"/>
  </Target>
</Project>